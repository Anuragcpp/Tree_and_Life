<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment"
    android:id="@+id/drawerLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/header_file"
            app:menu="@menu/sliding_menu"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/dwawable_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/icon__menu"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/ToolBarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="TreeAndYou"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/top_bar"
                android:background="@color/black" />

            <TextView
                android:id="@+id/first_text_demo"
                android:layout_width="match_parent"
                android:layout_height="607dp"
                android:layout_below="@id/top_bar"
                android:layout_marginTop="7dp"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="Get credits by planting trees in the real world!"
                android:textAlignment="center"
                android:textColor="@color/text_color_sub"
                android:textSize="25sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_plant_img"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@id/first_text_demo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/guwava"
                app:civ_border_color="@color/icon_color"
                app:civ_border_width="3dp" />

            <TextView
                android:id="@+id/user_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/plant_btn_demo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/invite_solid_bg"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="Your Credits 1500"
                android:textColor="@color/text_color_sub"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/plant_btn_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_plant_img"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/user_plant_check_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg"
                    android:fontFamily="sans-serif-medium"
                    android:padding="10dp"
                    android:text="Daily CheckIn"
                    android:textColor="@color/text_color" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/check_plant_disease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg"
                    android:fontFamily="sans-serif-medium"
                    android:padding="10dp"
                    android:text="Check Disease"
                    android:textColor="@color/text_color" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>