<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg"
    tools:context=".fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/icon__menu"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="20sp"
                android:textColor="@color/text_color"
                android:text="TreeAndYou"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/top_bar"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/first_text_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get credits by planting trees in the real world!"
            android:fontFamily="sans-serif"
            android:textSize="25sp"
            android:textColor="@color/text_color_sub"
            android:padding="10dp"
            android:layout_below="@id/top_bar"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/user_plant_img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/plant_demo"
            android:background="@drawable/circle_bg"
            android:layout_below="@id/first_text_demo"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/user_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:textColor="@color/text_color_sub"
            android:background="@drawable/invite_solid_bg"
            android:padding="10dp"
            android:layout_below="@id/user_plant_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Your Credits 1500"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily CheckIn"
            android:background="@drawable/btn_bg"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_credit"
            android:layout_marginTop="30dp"
            android:textColor="@color/text_color"
            android:fontFamily="sans-serif-medium"/>


    </RelativeLayout>
</LinearLayout>