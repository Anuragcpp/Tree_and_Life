    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_plant_img_gb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/user_plant_name_gb"
                android:src="@drawable/plant_demo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@id/user_plant_name_gb"/>

            <TextView
                android:id="@+id/user_plant_name_gb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Ginger Plant"
                android:layout_above="@id/user_plant_info_gb"
                android:textColor="@color/text_color"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/user_plant_location_gb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif"
                android:text="Rajasthan,Suratgarh"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/user_plant_info_gb"
                android:textColor="@color/text_color_sub"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/user_plant_info_gb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:maxLines="2"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:text="ldkfjalsdkfj lkdjaflks j lfjalkl  ldfajsldf f kdj  kldsafjlsdj f a fla..."
                android:textColor="@color/text_color_sub"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/user_plant_moreDetails_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="sans-serif"
                android:text="more details"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>

        </RelativeLayout>


    </LinearLayout>
